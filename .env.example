# Server listen port
PORT=3000

# Server bind address (0.0.0.0 = all interfaces, 127.0.0.1 = localhost only)
HOST=0.0.0.0

# Directory for cloned repos and session data
DATA_DIR=./data

# Path to Claude Code binary (absolute path or command name)
CLAUDE_PATH=claude

# Maximum concurrent sessions
MAX_SESSIONS=10

# Auto-end sessions after N minutes of no connected clients (0 = disabled)
SESSION_IDLE_TIMEOUT=0
